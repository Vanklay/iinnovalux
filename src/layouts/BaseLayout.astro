---
import '../styles/global.css';
import Header from '../components/global/Header.astro';
import Footer from '../components/global/Footer.astro';
import MobileMenu from '../components/global/MobileMenu.astro';
import { company } from '../data/company';

interface Props {
  title: string;
  description: string;
  image?: string;
  keywords?: string;
  type?: string;
}

const {
  title,
  description,
  image = '/og-default.jpg',
  keywords = 'bricoleur Luxembourg, handyman Luxembourg, réparations maison, maintenance domicile, montage meubles, entretien jardin, dépannage urgence, déménagement Luxembourg, petits travaux, IINNOVALUX',
  type = 'website'
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const fullImageURL = new URL(image, Astro.site);
const siteName = 'IINNOVALUX';
const fullTitle = title === 'Accueil' ? `Travaux, Réparation & Maintenance Luxembourg | ${siteName}` : `${title} | ${siteName}`;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={siteName} />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Geo Tags for Luxembourg -->
    <meta name="geo.region" content="LU" />
    <meta name="geo.placename" content="Born, Luxembourg" />
    <meta name="geo.position" content="49.7167;6.1167" />
    <meta name="ICBM" content="49.7167, 6.1167" />

    <!-- Language -->
    <meta http-equiv="content-language" content="fr" />
    <link rel="alternate" hreflang="fr" href={canonicalURL} />
    <link rel="alternate" hreflang="x-default" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={`${title} - IINNOVALUX Luxembourg`} />
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:locale" content="fr_FR" />
    <meta property="og:site_name" content={siteName} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullImageURL} />
    <meta name="twitter:image:alt" content={`${title} - IINNOVALUX Luxembourg`} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon.svg" />
    <meta name="theme-color" content="#F9BD25" />
    <meta name="msapplication-TileColor" content="#1D1B16" />

    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://www.googletagmanager.com" />

    <!-- Google Fonts - non-blocking -->
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@500;700&family=DM+Sans:wght@400;500;600&family=JetBrains+Mono:wght@400;500&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@500;700&family=DM+Sans:wght@400;500;600&family=JetBrains+Mono:wght@400;500&display=swap"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@500;700&family=DM+Sans:wght@400;500;600&family=JetBrains+Mono:wght@400;500&display=swap"
      />
    </noscript>

    <!-- Preload hero image for LCP optimization (homepage only) -->
    {title === 'Accueil' && (
      <link
        rel="preload"
        as="image"
        href="/images/hero-image-800.webp"
        imagesrcset="/images/hero-image-480.webp 480w, /images/hero-image-800.webp 800w, /images/hero-image.webp 1415w"
        imagesizes="100vw"
        fetchpriority="high"
      />
    )}

    <!-- LLMs.txt reference -->
    <link rel="author" href="/llms.txt" />

    <!-- Schema.org LocalBusiness + HomeAndConstructionBusiness -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": ["LocalBusiness", "HomeAndConstructionBusiness"],
      "@id": "https://iinnovalux.lu/#business",
      "name": "IINNOVALUX SARL-s",
      "alternateName": "IINNOVALUX",
      "description": "Services professionnels de maintenance, réparations et travaux à domicile au Luxembourg. Bricoleur, montage meubles, entretien jardin, dépannage 24h/7, déménagement.",
      "url": "https://iinnovalux.lu",
      "logo": {
        "@type": "ImageObject",
        "url": "https://iinnovalux.lu/logo.svg",
        "width": 262,
        "height": 134
      },
      "image": "https://iinnovalux.lu/og-default.jpg",
      "telephone": "+352621479364",
      "email": "iinnovalux@gmail.com",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "76, Haaptstrooss",
        "addressLocality": "Born",
        "postalCode": "L-6661",
        "addressRegion": "Luxembourg",
        "addressCountry": "LU"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 49.7167,
        "longitude": 6.1167
      },
      "openingHoursSpecification": [
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          "opens": "08:00",
          "closes": "18:00"
        },
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Saturday", "Sunday"],
          "opens": "00:00",
          "closes": "23:59",
          "description": "Urgences uniquement"
        }
      ],
      "priceRange": "€€",
      "currenciesAccepted": "EUR",
      "paymentAccepted": "Cash, Credit Card, Bank Transfer",
      "areaServed": [
        {
          "@type": "Country",
          "name": "Luxembourg"
        },
        {
          "@type": "GeoCircle",
          "geoMidpoint": {
            "@type": "GeoCoordinates",
            "latitude": 49.8153,
            "longitude": 6.1296
          },
          "geoRadius": "50000"
        }
      ],
      "serviceArea": {
        "@type": "GeoCircle",
        "geoMidpoint": {
          "@type": "GeoCoordinates",
          "latitude": 49.8153,
          "longitude": 6.1296
        },
        "geoRadius": "50000"
      },
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Services de maintenance",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Petits travaux",
              "description": "Réparations et maintenance domicile"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Montage de meubles",
              "description": "Assemblage professionnel meubles IKEA et autres"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Entretien extérieur",
              "description": "Jardinage, tonte, taille haies, abattage arbres"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Dépannage 24h/7",
              "description": "Intervention urgence jour et nuit"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Débarras",
              "description": "Évacuation caves, greniers, appartements"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Déménagement",
              "description": "Transport et manutention avec assurance"
            }
          }
        ]
      },
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "4.9",
        "bestRating": "5",
        "worstRating": "1",
        "ratingCount": "127",
        "reviewCount": "89"
      },
      "foundingDate": "2015",
      "numberOfEmployees": {
        "@type": "QuantitativeValue",
        "minValue": 2,
        "maxValue": 10
      },
      "slogan": "La solution pour une maison durable",
      "knowsLanguage": ["fr", "pt", "en", "de", "lb"],
      "sameAs": [
        "https://www.facebook.com/people/Iinnovalux-Sarls",
        "https://www.instagram.com/iinnovalux_sarls/",
        "https://www.linkedin.com/in/iinnovalux-sarls-13518839b/"
      ]
    })} />

    <!-- WebSite Schema for Search Box -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "IINNOVALUX",
      "url": "https://iinnovalux.lu",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://iinnovalux.lu/services?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    })} />

    <!-- BreadcrumbList Schema -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Accueil",
          "item": "https://iinnovalux.lu"
        }
      ]
    })} />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <MobileMenu />

    <main class="flex-1">
      <slot />
    </main>

    <Footer />

    <script>
      import { initScrollReveal, initHeaderScroll, initMobileMenu } from '../utils/animations';

      document.addEventListener('DOMContentLoaded', () => {
        initScrollReveal();
        initHeaderScroll();
        initMobileMenu();
      });
    </script>
  </body>
</html>
