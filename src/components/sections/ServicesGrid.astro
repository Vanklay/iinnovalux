---
import type { Service } from '../../data/services';

interface Props {
  services: Service[];
  showHeader?: boolean;
  label?: string;
  title?: string;
  subtitle?: string;
}

const {
  services,
  showHeader = true,
  label = 'Nos expertises',
  title = 'Des services adaptés à vos besoins',
  subtitle = 'Solutions complètes pour l\'entretien et la maintenance de votre maison',
} = Astro.props;
---

<section class="py-24 md:py-40 bg-dark-primary">
  <div class="container mx-auto px-5 md:px-6 lg:px-16">

    {showHeader && (
      <div data-reveal class="flex flex-col lg:flex-row lg:items-end lg:justify-between gap-6 mb-16 md:mb-20">
        <div class="max-w-2xl">
          <div class="flex items-center gap-4 mb-6">
            <span class="h-px w-12 bg-gold/60"></span>
            <span class="text-gold text-xs tracking-[0.3em] uppercase">{label}</span>
          </div>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-display text-white leading-[1.1] tracking-tight">
            {title}
          </h2>
        </div>
        <p class="text-white/50 text-base lg:text-lg max-w-md leading-relaxed lg:text-right">
          {subtitle}
        </p>
      </div>
    )}

    <!-- Bento grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-5">
      {services.map((service, index) => {
        const isLarge = index === 0 || index === 3;
        return (
          <a
            href={`/services/${service.slug}`}
            data-reveal
            data-reveal-delay={String(Math.min(index + 1, 4))}
            class:list={[
              "service-card group relative overflow-hidden rounded-2xl border border-white/5 transition-all duration-500 hover:border-gold/30",
              isLarge ? "md:col-span-2 lg:col-span-2" : ""
            ]}
          >
            <!-- Background image -->
            <div class="absolute inset-0">
              <img
                src={`/images/${service.slug}.webp`}
                alt={`Service ${service.title} - IINNOVALUX Luxembourg`}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
              <!-- Dark overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-dark-primary via-dark-primary/90 to-dark-primary/70"></div>
              <!-- Gold tint on hover -->
              <div class="absolute inset-0 bg-gold/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            </div>

            <div class:list={[
              "relative p-6 md:p-8 lg:p-10 flex flex-col justify-between h-full",
              isLarge ? "min-h-[280px] md:min-h-[300px]" : "min-h-[260px] md:min-h-[280px]"
            ]}>

              <!-- Top: Icon + Number -->
              <div class="flex items-start justify-between">
                <div class="w-12 h-12 md:w-14 md:h-14 rounded-xl bg-gold/10 flex items-center justify-center text-gold group-hover:bg-gold group-hover:text-dark-primary transition-all duration-500">
                  <Fragment set:html={service.icon} />
                </div>
                <span class="text-white/[0.06] text-6xl md:text-7xl font-display font-bold leading-none group-hover:text-gold/10 transition-colors duration-500">
                  {String(index + 1).padStart(2, '0')}
                </span>
              </div>

              <!-- Bottom: Title + Description + Arrow -->
              <div class="mt-auto">
                <h3 class="text-xl md:text-2xl font-display text-white mb-3 group-hover:text-gold transition-colors duration-300">
                  {service.title}
                </h3>
                <p class="text-white/60 text-sm md:text-base leading-relaxed line-clamp-2">
                  {service.description}
                </p>

                <!-- Arrow indicator with slide animation -->
                <div class="flex items-center gap-3 mt-6">
                  <span class="relative overflow-hidden h-4">
                    <span class="block text-xs tracking-[0.2em] uppercase text-white/50 transition-transform duration-300 group-hover:-translate-y-full">Découvrir</span>
                    <span class="absolute top-0 left-0 block text-xs tracking-[0.2em] uppercase translate-y-full transition-transform duration-300 group-hover:translate-y-0 text-gold">Découvrir</span>
                  </span>
                  <div class="relative w-8 h-8 rounded-full border border-white/10 flex items-center justify-center overflow-hidden group-hover:border-gold/30 transition-colors duration-300">
                    <span class="absolute inset-0 bg-gold scale-0 group-hover:scale-100 transition-transform duration-500 rounded-full"></span>
                    <svg class="relative z-10 w-3.5 h-3.5 text-white/60 group-hover:text-dark-primary transition-colors duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                  </div>
                </div>
              </div>

            </div>

            <!-- Subtle corner accent on hover -->
            <div class="absolute top-0 right-0 w-24 h-24 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none">
              <div class="absolute top-5 right-5 w-10 h-10 border-t border-r border-gold/30 rounded-tr-xl"></div>
            </div>

          </a>
        );
      })}

      <!-- CTA Card to complete the grid -->
      <a
        href="/contact"
        data-reveal
        data-reveal-delay="4"
        class="service-card group relative overflow-hidden rounded-2xl bg-gradient-to-br from-gold/20 via-gold/10 to-transparent border border-gold/20 transition-all duration-500 hover:border-gold/40 min-h-[260px] md:min-h-[280px]"
      >
        <div class="absolute inset-0 bg-gold/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

        <div class="relative p-6 md:p-8 lg:p-10 flex flex-col justify-between h-full">
          <!-- Top -->
          <div class="flex items-start justify-between">
            <div class="w-12 h-12 md:w-14 md:h-14 rounded-xl bg-gold/20 flex items-center justify-center text-gold group-hover:bg-gold group-hover:text-dark-primary transition-all duration-500">
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.625 12a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H8.25m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H12m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0h-.375M21 12c0 4.556-4.03 8.25-9 8.25a9.764 9.764 0 01-2.555-.337A5.972 5.972 0 015.41 20.97a5.969 5.969 0 01-.474-.065 4.48 4.48 0 00.978-2.025c.09-.457-.133-.901-.467-1.226C3.93 16.178 3 14.189 3 12c0-4.556 4.03-8.25 9-8.25s9 3.694 9 8.25z" />
              </svg>
            </div>
            <span class="text-gold/20 text-6xl md:text-7xl font-display font-bold leading-none">?</span>
          </div>

          <!-- Bottom -->
          <div class="mt-auto">
            <h3 class="text-xl md:text-2xl font-display text-white mb-3 group-hover:text-gold transition-colors duration-300">
              Besoin d'autre chose ?
            </h3>
            <p class="text-white/60 text-sm md:text-base leading-relaxed">
              Contactez-nous pour discuter de votre projet personnalisé.
            </p>

            <!-- Arrow indicator -->
            <div class="flex items-center gap-3 mt-6">
              <span class="relative overflow-hidden h-4">
                <span class="block text-xs tracking-[0.2em] uppercase text-gold/60 transition-transform duration-300 group-hover:-translate-y-full">Nous contacter</span>
                <span class="absolute top-0 left-0 block text-xs tracking-[0.2em] uppercase translate-y-full transition-transform duration-300 group-hover:translate-y-0 text-gold">Nous contacter</span>
              </span>
              <div class="relative w-8 h-8 rounded-full border border-gold/30 flex items-center justify-center overflow-hidden transition-colors duration-300">
                <span class="absolute inset-0 bg-gold scale-0 group-hover:scale-100 transition-transform duration-500 rounded-full"></span>
                <svg class="relative z-10 w-3.5 h-3.5 text-gold/60 group-hover:text-dark-primary transition-colors duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </div>
          </div>
        </div>
      </a>
    </div>

  </div>
</section>

<style>
  /* Visible by default for LCP */
  [data-reveal] {
    opacity: 1;
    transform: translateY(0);
  }

  @media (prefers-reduced-motion: no-preference) {
    [data-reveal] {
      opacity: 0;
      transform: translateY(30px);
      animation: reveal 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    [data-reveal-delay="1"] { animation-delay: 0.1s; }
    [data-reveal-delay="2"] { animation-delay: 0.15s; }
    [data-reveal-delay="3"] { animation-delay: 0.2s; }
    [data-reveal-delay="4"] { animation-delay: 0.25s; }

    @keyframes reveal {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  }
</style>
