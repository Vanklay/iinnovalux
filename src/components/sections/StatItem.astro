---
interface Props {
  value: string;
  label: string;
}

const { value, label } = Astro.props;
---

<div class="text-center">
  <div class="font-mono font-bold text-4xl md:text-5xl text-gold-gradient mb-2">
    {value}
  </div>
  <div class="text-gray-medium text-sm uppercase tracking-wider">
    {label}
  </div>
</div>
