---
interface GalleryImage {
  src: string;
  alt: string;
  category?: string;
}

interface Props {
  images: GalleryImage[];
  showHeader?: boolean;
}

const { images, showHeader = true } = Astro.props;
---

<section class="py-32 md:py-40 lg:py-48 bg-dark-primary">
  <div class="max-w-7xl mx-auto px-6 md:px-12 lg:px-20">

    {showHeader && (
      <div class="text-center mb-20 md:mb-28">
        <p class="text-gold/80 text-sm tracking-[0.3em] uppercase mb-4">Portfolio</p>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-display text-white tracking-tight">
          Nos réalisations
        </h2>
      </div>
    )}

    <!-- Minimal Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 lg:gap-16">
      {images.map((image, index) => (
        <a
          href={image.src}
          class="gallery-link group block"
          data-index={index}
          data-category={image.category}
        >
          <div class="relative">
            <!-- Image container with subtle shadow -->
            <div class="relative overflow-hidden rounded-2xl bg-dark-secondary">
              <div class="aspect-[4/3]">
                <img
                  src={image.src}
                  alt={image.alt}
                  class="w-full h-full object-cover transition-transform duration-1000 ease-out group-hover:scale-[1.03]"
                  loading="lazy"
                />
              </div>
            </div>

            <!-- Minimal info below image -->
            <div class="mt-5 flex items-center justify-between">
              <span class="text-white/40 text-sm tracking-wide">
                {image.category}
              </span>
              <span class="text-white/20 text-xs font-mono">
                {String(index + 1).padStart(2, '0')}
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>

  </div>
</section>

<!-- Minimal Lightbox -->
<div id="lightbox" class="fixed inset-0 z-50 opacity-0 pointer-events-none transition-opacity duration-500">
  <!-- Background -->
  <div class="absolute inset-0 bg-dark-primary"></div>

  <!-- Close -->
  <button
    id="lightbox-close"
    class="absolute top-8 right-8 z-20 w-12 h-12 flex items-center justify-center text-white/40 hover:text-white transition-colors"
    aria-label="Fermer"
  >
    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>

  <!-- Navigation -->
  <button
    id="lightbox-prev"
    class="absolute left-8 top-1/2 -translate-y-1/2 z-20 w-12 h-12 flex items-center justify-center text-white/30 hover:text-white transition-colors"
    aria-label="Précédent"
  >
    <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
    </svg>
  </button>

  <button
    id="lightbox-next"
    class="absolute right-8 top-1/2 -translate-y-1/2 z-20 w-12 h-12 flex items-center justify-center text-white/30 hover:text-white transition-colors"
    aria-label="Suivant"
  >
    <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
    </svg>
  </button>

  <!-- Image -->
  <div class="absolute inset-0 flex items-center justify-center p-12 md:p-20">
    <img
      id="lightbox-image"
      src=""
      alt="Photo de réalisation IINNOVALUX"
      class="max-w-full max-h-full object-contain rounded-lg transition-all duration-500"
    />
  </div>

  <!-- Counter -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 text-white/30 text-sm font-mono tracking-widest">
    <span id="lightbox-current">01</span>
    <span class="mx-2">/</span>
    <span id="lightbox-total">12</span>
  </div>
</div>

<style>
  .gallery-link {
    opacity: 0;
    transform: translateY(40px);
  }

  .gallery-link.visible {
    animation: fadeUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  @keyframes fadeUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Stagger animation */
  .gallery-link:nth-child(1) { animation-delay: 0s; }
  .gallery-link:nth-child(2) { animation-delay: 0.1s; }
  .gallery-link:nth-child(3) { animation-delay: 0.15s; }
  .gallery-link:nth-child(4) { animation-delay: 0.2s; }
  .gallery-link:nth-child(5) { animation-delay: 0.25s; }
  .gallery-link:nth-child(6) { animation-delay: 0.3s; }
  .gallery-link:nth-child(7) { animation-delay: 0.35s; }
  .gallery-link:nth-child(8) { animation-delay: 0.4s; }
  .gallery-link:nth-child(9) { animation-delay: 0.45s; }
  .gallery-link:nth-child(10) { animation-delay: 0.5s; }
  .gallery-link:nth-child(11) { animation-delay: 0.55s; }
  .gallery-link:nth-child(12) { animation-delay: 0.6s; }

  #lightbox.active {
    opacity: 1;
    pointer-events: auto;
  }

  #lightbox-image {
    transform: scale(0.95);
    opacity: 0;
  }

  #lightbox.active #lightbox-image {
    transform: scale(1);
    opacity: 1;
  }
</style>

<script>
  // Intersection Observer for scroll animations
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    },
    { threshold: 0.1, rootMargin: '0px 0px -50px 0px' }
  );

  document.querySelectorAll('.gallery-link').forEach((el) => observer.observe(el));

  // Lightbox
  const galleryLinks = document.querySelectorAll('.gallery-link');
  const lightbox = document.getElementById('lightbox');
  const lightboxImage = document.getElementById('lightbox-image') as HTMLImageElement;
  const lightboxClose = document.getElementById('lightbox-close');
  const lightboxPrev = document.getElementById('lightbox-prev');
  const lightboxNext = document.getElementById('lightbox-next');
  const lightboxCurrent = document.getElementById('lightbox-current');
  const lightboxTotal = document.getElementById('lightbox-total');

  let currentIndex = 0;
  const images: { src: string; alt: string }[] = [];

  galleryLinks.forEach((link, index) => {
    const href = link.getAttribute('href');
    const img = link.querySelector('img');
    images.push({
      src: href || '',
      alt: img?.getAttribute('alt') || '',
    });

    link.addEventListener('click', (e) => {
      e.preventDefault();
      openLightbox(index);
    });
  });

  if (lightboxTotal) {
    lightboxTotal.textContent = String(images.length).padStart(2, '0');
  }

  function openLightbox(index: number) {
    currentIndex = index;
    updateLightboxImage();
    lightbox?.classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  function closeLightbox() {
    lightbox?.classList.remove('active');
    document.body.style.overflow = '';
  }

  function updateLightboxImage() {
    const image = images[currentIndex];
    if (lightboxImage && image) {
      lightboxImage.src = image.src;
      lightboxImage.alt = image.alt;
    }
    if (lightboxCurrent) {
      lightboxCurrent.textContent = String(currentIndex + 1).padStart(2, '0');
    }
  }

  function navigate(direction: number) {
    currentIndex += direction;
    if (currentIndex < 0) currentIndex = images.length - 1;
    if (currentIndex >= images.length) currentIndex = 0;
    updateLightboxImage();
  }

  lightboxClose?.addEventListener('click', closeLightbox);
  lightboxPrev?.addEventListener('click', () => navigate(-1));
  lightboxNext?.addEventListener('click', () => navigate(1));

  lightbox?.addEventListener('click', (e) => {
    if (e.target === lightbox || (e.target as HTMLElement).classList.contains('absolute')) {
      closeLightbox();
    }
  });

  document.addEventListener('keydown', (e) => {
    if (!lightbox?.classList.contains('active')) return;
    if (e.key === 'Escape') closeLightbox();
    if (e.key === 'ArrowLeft') navigate(-1);
    if (e.key === 'ArrowRight') navigate(1);
  });
</script>
