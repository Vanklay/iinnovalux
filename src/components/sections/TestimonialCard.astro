---
interface Props {
  name: string;
  location: string;
  text: string;
  rating: number;
}

const { name, location, text, rating } = Astro.props;
---

<div class="bg-dark-tertiary rounded-2xl p-6 border border-white/5 h-full flex flex-col">
  <!-- Stars -->
  <div class="flex gap-1 mb-4">
    {Array.from({ length: 5 }).map((_, i) => (
      <svg
        class:list={['w-5 h-5', i < rating ? 'text-gold' : 'text-white/20']}
        fill="currentColor"
        viewBox="0 0 20 20"
      >
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
      </svg>
    ))}
  </div>

  <!-- Quote -->
  <blockquote class="text-white/80 mb-6 flex-1">
    "{text}"
  </blockquote>

  <!-- Author -->
  <div class="flex items-center gap-3 pt-4 border-t border-white/5">
    <div class="w-10 h-10 bg-gold/10 rounded-full flex items-center justify-center">
      <span class="font-display font-bold text-gold">
        {name.charAt(0)}
      </span>
    </div>
    <div>
      <div class="font-medium text-white">{name}</div>
      <div class="text-gray-medium text-sm">{location}</div>
    </div>
  </div>
</div>
