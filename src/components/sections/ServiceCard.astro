---
import type { Service } from '../../data/services';
import Card from '../ui/Card.astro';

interface Props {
  service: Service;
  featured?: boolean;
}

const { service, featured = false } = Astro.props;

const icons: Record<string, string> = {
  furniture: 'M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4',
  home: 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6',
  garden: 'M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z',
  tools: 'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z',
  truck: 'M8 7h12m0 0v5m0-5l-3-3m3 3l-3 3M8 7H6a2 2 0 00-2 2v9a2 2 0 002 2h1m7 0h4a2 2 0 002-2v-1m-6 3a2 2 0 11-4 0m4 0a2 2 0 114 0m-8 0a2 2 0 11-4 0',
  emergency: 'M13 10V3L4 14h7v7l9-11h-7z',
  electric: 'M13 10V3L4 14h7v7l9-11h-7z',
};
---

<Card class={featured ? 'border-gold/30 bg-dark-secondary' : ''}>
  <a href={`/services/${service.slug}`} class="block group">
    <!-- Icon -->
    <div class="w-14 h-14 bg-gold/10 rounded-xl flex items-center justify-center mb-5 transition-colors group-hover:bg-gold">
      <svg
        class="w-7 h-7 text-gold transition-colors group-hover:text-dark-primary"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="1.5"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d={icons[service.icon] || icons.tools} />
      </svg>
    </div>

    <!-- Content -->
    <h3 class="font-display font-bold text-xl text-white mb-3 group-hover:text-gold transition-colors">
      {service.title}
    </h3>
    <p class="text-gray-medium text-sm mb-5 line-clamp-2">
      {service.shortDescription}
    </p>

    <!-- Link -->
    <span class="inline-flex items-center gap-2 text-gold text-sm font-medium group-hover:gap-3 transition-all">
      En savoir plus
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </span>
  </a>
</Card>
