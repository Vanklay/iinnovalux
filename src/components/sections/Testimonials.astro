---
interface Testimonial {
  name: string;
  location: string;
  text: string;
  rating: number;
  service: string;
  initials: string;
}

const testimonials: Testimonial[] = [
  {
    name: 'Carlos Ferreira',
    location: 'Esch-sur-Alzette',
    text: "L'équipe a démonté et remonté tous mes meubles IKEA lors de mon déménagement. Rapide et très professionnel.",
    rating: 5,
    service: 'Montage de meubles',
    initials: 'CF',
  },
  {
    name: 'Anne-Marie Schmit',
    location: 'Bertrange',
    text: "Intervenus en urgence un dimanche pour une fuite. Très réactifs et efficaces. Le problème a été résolu en moins d'une heure.",
    rating: 5,
    service: 'Dépannage 24h/7',
    initials: 'AS',
  },
  {
    name: 'Jean-Pierre Muller',
    location: 'Luxembourg-Ville',
    text: "Débarras complet de la cave de mes parents. Équipe respectueuse et travail impeccable. Tout a été trié et évacué proprement.",
    rating: 5,
    service: 'Débarras',
    initials: 'JM',
  },
  {
    name: 'Sofia Da Costa',
    location: 'Differdange',
    text: "Ils s'occupent de mon jardin depuis 6 mois. Toujours ponctuels et le résultat est parfait à chaque fois.",
    rating: 5,
    service: 'Entretien extérieur',
    initials: 'SC',
  },
  {
    name: 'Marc Hoffmann',
    location: 'Strassen',
    text: "Petits travaux de rénovation dans mon appartement : fixation TV, étagères, réparation porte. Travail soigné et prix correct.",
    rating: 5,
    service: 'Petits travaux',
    initials: 'MH',
  },
  {
    name: 'Isabelle Klein',
    location: 'Hesperange',
    text: "Déménagement de Kirchberg à Hesperange géré de A à Z. Rien n'a été cassé, tout était bien protégé. Équipe sympathique.",
    rating: 5,
    service: 'Déménagement',
    initials: 'IK',
  },
];
---

<section class="py-32 md:py-40 bg-dark-secondary overflow-hidden">
  <div class="max-w-4xl mx-auto px-6 md:px-12">

    <!-- Header -->
    <div class="text-center mb-16 md:mb-24">
      <h2 class="text-3xl md:text-4xl font-display text-white tracking-tight mb-4">
        Ils nous font confiance
      </h2>
      <p class="text-white/60 text-base">
        Avis de nos clients au Luxembourg
      </p>
    </div>

    <!-- Carousel -->
    <div class="testimonial-carousel relative">
      <div class="testimonial-track">
        {testimonials.map((testimonial, index) => (
          <div class="testimonial-slide" data-index={index}>
            <div class="text-center max-w-2xl mx-auto">

              <!-- Stars -->
              <div class="flex justify-center gap-1 mb-8">
                {Array.from({ length: 5 }).map((_, i) => (
                  <svg
                    class={`w-5 h-5 ${i < testimonial.rating ? 'text-gold' : 'text-white/10'}`}
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>

              <!-- Quote -->
              <blockquote class="text-white/80 text-xl md:text-2xl leading-relaxed mb-10 font-light">
                "{testimonial.text}"
              </blockquote>

              <!-- Author -->
              <div class="flex flex-col items-center gap-3">
                <div class="w-12 h-12 rounded-full bg-gold/10 flex items-center justify-center">
                  <span class="text-sm font-medium text-gold">{testimonial.initials}</span>
                </div>
                <div>
                  <div class="font-medium text-white">{testimonial.name}</div>
                  <div class="text-white/60 text-sm">{testimonial.location} · {testimonial.service}</div>
                </div>
              </div>

            </div>
          </div>
        ))}
      </div>

      <!-- Bullets -->
      <div class="flex justify-center gap-2 mt-16">
        {testimonials.map((_, index) => (
          <button
            class="testimonial-bullet w-8 h-8 rounded-full flex items-center justify-center transition-all duration-300"
            data-index={index}
            aria-label={`Témoignage ${index + 1}`}
          >
            <span class="w-2 h-2 rounded-full bg-white/30 transition-all duration-300"></span>
          </button>
        ))}
      </div>
    </div>

  </div>
</section>

<style>
  .testimonial-track {
    position: relative;
    min-height: 280px;
  }

  .testimonial-slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    transform: translateX(30px);
    transition: opacity 0.5s ease, transform 0.5s ease;
    pointer-events: none;
  }

  .testimonial-slide.active {
    opacity: 1;
    transform: translateX(0);
    pointer-events: auto;
  }

  .testimonial-bullet.active span {
    background: var(--color-gold, #C9A227);
    width: 24px;
  }
</style>

<script>
  const slides = document.querySelectorAll('.testimonial-slide');
  const bullets = document.querySelectorAll('.testimonial-bullet');
  let currentIndex = 0;
  let interval: ReturnType<typeof setInterval>;

  function showSlide(index: number) {
    slides.forEach((slide, i) => {
      slide.classList.toggle('active', i === index);
    });
    bullets.forEach((bullet, i) => {
      bullet.classList.toggle('active', i === index);
    });
    currentIndex = index;
  }

  function nextSlide() {
    const next = (currentIndex + 1) % slides.length;
    showSlide(next);
  }

  function startAutoPlay() {
    interval = setInterval(nextSlide, 5000);
  }

  function stopAutoPlay() {
    clearInterval(interval);
  }

  // Initialize
  showSlide(0);
  startAutoPlay();

  // Bullet clicks
  bullets.forEach((bullet) => {
    bullet.addEventListener('click', () => {
      const index = parseInt(bullet.getAttribute('data-index') || '0');
      stopAutoPlay();
      showSlide(index);
      startAutoPlay();
    });
  });

  // Pause on hover
  const carousel = document.querySelector('.testimonial-carousel');
  carousel?.addEventListener('mouseenter', stopAutoPlay);
  carousel?.addEventListener('mouseleave', startAutoPlay);
</script>
