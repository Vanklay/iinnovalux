---
interface Props {
  number: number;
  title: string;
  description: string;
}

const { number, title, description } = Astro.props;
---

<div class="text-center">
  <!-- Number circle -->
  <div class="relative inline-flex items-center justify-center mb-6">
    <div class="w-16 h-16 bg-dark-tertiary border-2 border-gold rounded-full flex items-center justify-center relative z-10">
      <span class="font-mono font-bold text-2xl text-gold">{number}</span>
    </div>
    <!-- Glow effect -->
    <div class="absolute inset-0 bg-gold/20 rounded-full blur-xl"></div>
  </div>

  <h3 class="font-display font-bold text-lg text-white mb-2">
    {title}
  </h3>
  <p class="text-gray-medium text-sm max-w-xs mx-auto">
    {description}
  </p>
</div>
