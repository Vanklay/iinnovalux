---
import { company } from '../../data/company';
---

<section class="py-12 md:py-16">
  <div class="container mx-auto px-4 lg:px-8">
    <div class="rounded-2xl overflow-hidden border border-white/5 bg-dark-tertiary">
      <!-- Map placeholder - Replace with actual map embed -->
      <div class="aspect-[16/9] md:aspect-[21/9] relative">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2583.5!2d6.2!3d49.8!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDnCsDQ4JzAwLjAiTiA2wrAxMicwMC4wIkU!5e0!3m2!1sfr!2slu!4v1"
          class="absolute inset-0 w-full h-full border-0"
          allowfullscreen
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title={`Localisation de ${company.name}`}
        ></iframe>

        <!-- Overlay for better visual integration -->
        <div class="absolute inset-0 pointer-events-none border border-white/5 rounded-2xl"></div>
      </div>
    </div>
  </div>
</section>
