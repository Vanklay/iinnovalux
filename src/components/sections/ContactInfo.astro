---
import { company } from '../../data/company';
---

<div class="space-y-8">
  <div>
    <h2 class="font-display font-bold text-2xl text-white mb-6">
      Contactez-nous
    </h2>
    <p class="text-gray-medium">
      Besoin d'un devis ou d'informations ? Notre équipe est à votre disposition pour répondre à toutes vos questions.
    </p>
  </div>

  <div class="space-y-6">
    <!-- Address -->
    <div class="flex gap-4">
      <div class="shrink-0 w-12 h-12 bg-gold/10 rounded-xl flex items-center justify-center">
        <svg class="w-6 h-6 text-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
      </div>
      <div>
        <h3 class="font-medium text-white mb-1">Adresse</h3>
        <p class="text-gray-medium text-sm">
          {company.address.street}<br />
          {company.address.postalCode} {company.address.city}<br />
          {company.address.country}
        </p>
      </div>
    </div>

    <!-- Phone -->
    <div class="flex gap-4">
      <div class="shrink-0 w-12 h-12 bg-gold/10 rounded-xl flex items-center justify-center">
        <svg class="w-6 h-6 text-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
      </div>
      <div>
        <h3 class="font-medium text-white mb-1">Téléphone</h3>
        <a
          href={`tel:${company.phoneRaw}`}
          class="text-gold hover:text-gold-light transition-colors font-mono"
        >
          {company.phone}
        </a>
      </div>
    </div>

    <!-- Email -->
    <div class="flex gap-4">
      <div class="shrink-0 w-12 h-12 bg-gold/10 rounded-xl flex items-center justify-center">
        <svg class="w-6 h-6 text-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
      </div>
      <div>
        <h3 class="font-medium text-white mb-1">Email</h3>
        <a
          href={`mailto:${company.email}`}
          class="text-gold hover:text-gold-light transition-colors"
        >
          {company.email}
        </a>
      </div>
    </div>

    <!-- Hours -->
    <div class="flex gap-4">
      <div class="shrink-0 w-12 h-12 bg-gold/10 rounded-xl flex items-center justify-center">
        <svg class="w-6 h-6 text-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div>
        <h3 class="font-medium text-white mb-1">Horaires</h3>
        <div class="text-gray-medium text-sm space-y-1">
          <p>{company.hours.weekdays}</p>
          <p>{company.hours.saturday}</p>
          <p>{company.hours.sunday}</p>
        </div>
      </div>
    </div>
  </div>
</div>
