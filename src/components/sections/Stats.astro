---
const stats = [
  { value: '98%', label: 'Clients satisfaits' },
  { value: '10+', label: 'Années d\'expérience' },
  { value: '24h', label: 'Délai de réponse' },
];
---

<section class="py-16 md:py-20">
  <div class="max-w-6xl mx-auto px-6 md:px-12">

    <div class="border-y border-white/5 py-12 md:py-16">
      <div class="flex flex-col md:flex-row items-center justify-between gap-10 md:gap-6">
        {stats.map((stat, index) => (
          <div class="stat-item flex items-center gap-4 md:gap-5" style={`animation-delay: ${index * 0.1}s`}>
            <span class="font-display text-3xl md:text-4xl text-gold">
              {stat.value}
            </span>
            <span class="text-white/50 text-sm">
              {stat.label}
            </span>
          </div>
        ))}
      </div>
    </div>

  </div>
</section>

<style>
  .stat-item {
    opacity: 0;
    animation: fadeIn 0.6s ease-out forwards;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }
</style>
