      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-10">
        {mainNavigation.map((item) => (
          item.isButton ? (
            <a
              href={item.href}
              class="group relative inline-flex items-center gap-2 text-xs tracking-widest uppercase"
            >
              <span class="relative w-10 h-10 rounded-full border border-white/20 flex items-center justify-center overflow-hidden">
                <span class="absolute inset-0 bg-gold scale-0 group-hover:scale-100 transition-transform duration-500 ease-out rounded-full"></span>
                <svg class="relative z-10 w-4 h-4 text-white transition-all duration-300 group-hover:text-dark-primary group-hover:translate-x-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
              <span class="relative overflow-hidden h-4">
                <span class="block text-white transition-transform duration-300 group-hover:-translate-y-full">{item.label}</span>
                <span class="absolute top-0 left-0 block translate-y-full transition-transform duration-300 group-hover:translate-y-0 text-gold">{item.label}</span>
              </span>
            </a>
          ) : (
            <a
              href={item.href}
              class="group relative text-sm text-white/60 tracking-wide overflow-hidden h-5 flex items-center"
            >
              <span class="block transition-transform duration-300 group-hover:-translate-y-full">{item.label}</span>
              <span class="absolute top-0 left-0 block translate-y-full transition-transform duration-300 group-hover:translate-y-0 text-white">{item.label}</span>
            </a>
          )
        ))}
      </div>

      <!-- Mobile Menu Button -->
      <button
        data-menu-toggle
        class="lg:hidden relative w-12 h-12 flex items-center justify-center group z-[60]"
        aria-label="Ouvrir le menu"
      >
        <div class="hamburger-lines relative w-7 h-5">
          <span class="hamburger-line hamburger-line-1"></span>
          <span class="hamburger-line hamburger-line-2"></span>
          <span class="hamburger-line hamburger-line-3"></span>
        </div>
      </button>
    </nav>
  </div>
</header>

<style>
  header {
    background: transparent;
  }

  .logo-wrapper {
    display: flex;
    align-items: center;
  }

  .logo-svg {
    height: 3.5rem;
    width: auto;
    transition: all 0.25s ease-out;
  }

  .logo-text {
    transition: opacity 0.25s ease-out;
  }

  .logo-icon {
    transition: transform 0.25s ease-out;
  }

  header:global(.header-scrolled) {
    background: rgba(29, 27, 22, 0.95);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }

  header:global(.header-scrolled) nav {
    height: 4rem;
  }

  header:global(.header-scrolled) .logo-svg {
    height: 3rem;
  }

  header:global(.header-scrolled) .logo-text {
    opacity: 0;
  }

  header:global(.header-scrolled) .logo-icon {
    transform: translate(-40px, 15px);
  }

  @media (min-width: 768px) {
    .logo-svg {
      height: 4rem;
    }

    header:global(.header-scrolled) nav {
      height: 4.5rem;
    }

    header:global(.header-scrolled) .logo-svg {
      height: 3.5rem;
    }

    header:global(.header-scrolled) .logo-icon {
      transform: translate(-45px, 18px);
    }
  }

  /* Hamburger Menu Animation */
  .hamburger-line {
    position: absolute;
    left: 0;
    width: 100%;
    height: 2px;
    background: white;
    border-radius: 2px;
    transition: all 0.4s cubic-bezier(0.68, -0.6, 0.32, 1.6);
  }

  .hamburger-line-1 {
    top: 0;
    width: 100%;
  }

  .hamburger-line-2 {
    top: 50%;
    transform: translateY(-50%);
    width: 70%;
  }

  .hamburger-line-3 {
    bottom: 0;
    width: 50%;
  }

  button:hover .hamburger-line {
    background: #F9BD25;
  }

  button:hover .hamburger-line-2,
  button:hover .hamburger-line-3 {
    width: 100%;
  }

  /* Open state */
  :global(.menu-open) .hamburger-line {
    background: white;
  }

  :global(.menu-open) .hamburger-line-1 {
    top: 50%;
    transform: translateY(-50%) rotate(45deg);
    width: 100%;
  }

  :global(.menu-open) .hamburger-line-2 {
    opacity: 0;
    transform: translateX(20px);
  }

  :global(.menu-open) .hamburger-line-3 {
    bottom: 50%;
    transform: translateY(50%) rotate(-45deg);
    width: 100%;
  }
</style>
