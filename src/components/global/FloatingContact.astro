---
import { company } from '../../data/company';
---

<!-- Floating Contact Widget -->
<div id="floating-contact" class="fixed bottom-6 right-6 z-40 flex flex-col items-end gap-3">

  <!-- Expanded Options (hidden by default) -->
  <div id="contact-options" class="flex flex-col gap-2 opacity-0 translate-y-4 pointer-events-none transition-all duration-300">

    <!-- Phone -->
    <a
      href={`tel:${company.phoneRaw}`}
      class="group flex items-center gap-3 pl-4 pr-2 py-2 bg-dark-secondary/95 backdrop-blur-sm rounded-full border border-white/10 hover:border-gold/30 transition-all duration-300 shadow-lg"
    >
      <span class="text-white/70 text-sm font-mono group-hover:text-white transition-colors">{company.phone}</span>
      <span class="w-10 h-10 rounded-full bg-gold/10 flex items-center justify-center group-hover:bg-gold transition-colors duration-300">
        <svg class="w-4 h-4 text-gold group-hover:text-dark-primary transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
      </span>
    </a>

    <!-- Email -->
    <a
      href={`mailto:${company.email}`}
      class="group flex items-center gap-3 pl-4 pr-2 py-2 bg-dark-secondary/95 backdrop-blur-sm rounded-full border border-white/10 hover:border-gold/30 transition-all duration-300 shadow-lg"
    >
      <span class="text-white/70 text-sm group-hover:text-white transition-colors truncate max-w-[180px]">{company.email}</span>
      <span class="w-10 h-10 rounded-full bg-gold/10 flex items-center justify-center group-hover:bg-gold transition-colors duration-300">
        <svg class="w-4 h-4 text-gold group-hover:text-dark-primary transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
      </span>
    </a>

  </div>

  <!-- Main Toggle Button -->
  <button
    id="contact-toggle"
    class="group relative w-14 h-14 rounded-full bg-gold shadow-lg shadow-gold/20 flex items-center justify-center transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-gold/30"
    aria-label="Contact"
    aria-expanded="false"
  >
    <!-- Contact icon (default) -->
    <svg id="icon-contact" class="w-6 h-6 text-dark-primary transition-all duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
    </svg>
    <!-- Close icon (when expanded) -->
    <svg id="icon-close" class="absolute w-6 h-6 text-dark-primary opacity-0 scale-50 transition-all duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
    </svg>

    <!-- Pulse ring -->
    <span class="absolute inset-0 rounded-full bg-gold/30 animate-ping-slow"></span>
  </button>

</div>

<style>
  @keyframes ping-slow {
    0% {
      transform: scale(1);
      opacity: 0.5;
    }
    75%, 100% {
      transform: scale(1.5);
      opacity: 0;
    }
  }

  .animate-ping-slow {
    animation: ping-slow 2s cubic-bezier(0, 0, 0.2, 1) infinite;
  }

  #floating-contact.expanded .animate-ping-slow {
    animation: none;
    opacity: 0;
  }

  #floating-contact.expanded #contact-options {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  #floating-contact.expanded #icon-contact {
    opacity: 0;
    transform: scale(0.5) rotate(90deg);
  }

  #floating-contact.expanded #icon-close {
    opacity: 1;
    transform: scale(1) rotate(0deg);
  }

  #floating-contact.expanded #contact-toggle {
    background: rgba(255, 255, 255, 0.1);
    box-shadow: none;
  }

  #floating-contact.expanded #contact-toggle svg {
    color: white;
  }
</style>

<script>
  const floatingContact = document.getElementById('floating-contact');
  const toggleBtn = document.getElementById('contact-toggle');

  toggleBtn?.addEventListener('click', () => {
    const isExpanded = floatingContact?.classList.toggle('expanded');
    toggleBtn.setAttribute('aria-expanded', String(isExpanded));
  });

  // Close when clicking outside
  document.addEventListener('click', (e) => {
    if (!floatingContact?.contains(e.target as Node)) {
      floatingContact?.classList.remove('expanded');
      toggleBtn?.setAttribute('aria-expanded', 'false');
    }
  });

  // Close on scroll (optional - subtle UX)
  let lastScroll = 0;
  window.addEventListener('scroll', () => {
    const currentScroll = window.scrollY;
    if (Math.abs(currentScroll - lastScroll) > 100) {
      floatingContact?.classList.remove('expanded');
      toggleBtn?.setAttribute('aria-expanded', 'false');
      lastScroll = currentScroll;
    }
  }, { passive: true });
</script>
