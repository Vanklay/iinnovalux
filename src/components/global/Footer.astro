---
import { company } from '../../data/company';
import { footerNavigation } from '../../data/navigation';
---

<footer class="bg-dark-primary pb-8">
  <!-- Top gradient line -->
  <div class="h-px bg-gradient-to-r from-transparent via-gold/30 to-transparent mb-16"></div>

  <div class="container mx-auto px-4 lg:px-8">
    <!-- Main footer grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-16">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href="/" class="block mb-6" aria-label="IINNOVALUX - Accueil">
          <img src="/logo.svg" alt="IINNOVALUX" width="262" height="134" class="h-14 w-auto" />
        </a>
        <p class="text-gray-medium text-sm mb-4">
          {company.tagline}
        </p>
        <p class="text-white/60 text-sm mb-6">
          {company.address.full}
        </p>
        <!-- Social Links -->
        <div class="flex items-center gap-3">
          <a
            href="https://www.facebook.com/people/Iinnovalux-Sarls"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-dark-tertiary flex items-center justify-center text-white/40 hover:bg-gold/10 hover:text-gold transition-all"
            aria-label="Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
          </a>
          <a
            href="https://www.instagram.com/iinnovalux_sarls/"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-dark-tertiary flex items-center justify-center text-white/40 hover:bg-gold/10 hover:text-gold transition-all"
            aria-label="Instagram"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
          </a>
          <a
            href="https://www.linkedin.com/in/iinnovalux-sarls-13518839b/"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-dark-tertiary flex items-center justify-center text-white/40 hover:bg-gold/10 hover:text-gold transition-all"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
        </div>
      </div>

      <!-- Services Column -->
      <div>
        <h2 class="font-display font-bold text-white mb-6 text-base">Services</h2>
        <ul class="space-y-3">
          {footerNavigation.services.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-gray-medium hover:text-gold transition-colors text-sm"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Links Column -->
      <div>
        <h2 class="font-display font-bold text-white mb-6 text-base">Liens utiles</h2>
        <ul class="space-y-3">
          {footerNavigation.links.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-gray-medium hover:text-gold transition-colors text-sm"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Column -->
      <div>
        <h2 class="font-display font-bold text-white mb-6 text-base">Contact</h2>
        <ul class="space-y-4">
          <li>
            <a
              href={`tel:${company.phoneRaw}`}
              class="flex items-center gap-3 text-gray-medium hover:text-gold transition-colors text-sm group min-h-[48px]"
            >
              <div class="w-12 h-12 rounded-full bg-dark-tertiary flex items-center justify-center group-hover:bg-gold/10 transition-colors">
                <svg class="w-5 h-5 text-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <span class="font-mono">{company.phone}</span>
            </a>
          </li>
          <li>
            <a
              href={`mailto:${company.email}`}
              class="flex items-center gap-3 text-gray-medium hover:text-gold transition-colors text-sm group min-h-[48px]"
            >
              <div class="w-12 h-12 rounded-full bg-dark-tertiary flex items-center justify-center group-hover:bg-gold/10 transition-colors">
                <svg class="w-5 h-5 text-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <span>{company.email}</span>
            </a>
          </li>
          <li class="pt-2">
            <div class="text-white/60 text-xs space-y-1">
              <p>{company.hours.weekdays}</p>
              <p class="text-gold">{company.hours.emergency}</p>
            </div>
          </li>
        </ul>

        <!-- Partner -->
        <div class="mt-8 pt-6 border-t border-white/5">
          <p class="text-white/20 text-[10px] uppercase tracking-widest mb-2">Partenaire</p>
          <a href="https://tack.lu" target="_blank" rel="noopener noreferrer" class="inline-block">
            <img src="/partner-tack.svg" alt="tack.lu" width="80" height="28" class="h-7 w-auto opacity-40 hover:opacity-70 transition-opacity" />
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-white/5 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-white/40 text-sm">
          &copy; {new Date().getFullYear()} IINNOVALUX SARL-s. Tous droits réservés.
        </p>
        <p class="text-white/40 text-sm">
          TVA: {company.vat} | RCS B300985
        </p>
        <a href="https://slash.lu" target="_blank" rel="noopener noreferrer" class="group flex items-center gap-2 text-white/40 hover:text-white/60 transition-colors text-sm">
          <span>Coded & developed by</span>
          <img src="/white-slash.svg" alt="Slash" width="56" height="16" class="h-4 w-auto opacity-60 group-hover:opacity-100 transition-opacity" />
        </a>
      </div>
    </div>
  </div>
</footer>
