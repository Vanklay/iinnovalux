---
import { company } from '../../data/company';
import { footerNavigation } from '../../data/navigation';
---

<footer class="bg-dark-primary pb-8">
  <!-- Top gradient line -->
  <div class="h-px bg-gradient-to-r from-transparent via-gold/30 to-transparent mb-16"></div>

  <div class="container mx-auto px-4 lg:px-8">
    <!-- Main footer grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-16">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href="/" class="block mb-6">
          <img src="/logo.svg" alt="INNOVALUX" class="h-14 w-auto" />
        </a>
        <p class="text-gray-medium text-sm mb-4">
          {company.tagline}
        </p>
        <p class="text-white/60 text-sm">
          {company.address.full}
        </p>
      </div>

      <!-- Services Column -->
      <div>
        <h4 class="font-display font-bold text-white mb-6">Services</h4>
        <ul class="space-y-3">
          {footerNavigation.services.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-gray-medium hover:text-gold transition-colors text-sm"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Links Column -->
      <div>
        <h4 class="font-display font-bold text-white mb-6">Liens utiles</h4>
        <ul class="space-y-3">
          {footerNavigation.links.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-gray-medium hover:text-gold transition-colors text-sm"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Column -->
      <div>
        <h4 class="font-display font-bold text-white mb-6">Contact</h4>
        <ul class="space-y-4">
          <li>
            <a
              href={`tel:${company.phoneRaw}`}
              class="flex items-center gap-3 text-gray-medium hover:text-gold transition-colors text-sm group"
            >
              <div class="w-8 h-8 rounded-full bg-dark-tertiary flex items-center justify-center group-hover:bg-gold/10 transition-colors">
                <svg class="w-4 h-4 text-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <span class="font-mono">{company.phone}</span>
            </a>
          </li>
          <li>
            <a
              href={`mailto:${company.email}`}
              class="flex items-center gap-3 text-gray-medium hover:text-gold transition-colors text-sm group"
            >
              <div class="w-8 h-8 rounded-full bg-dark-tertiary flex items-center justify-center group-hover:bg-gold/10 transition-colors">
                <svg class="w-4 h-4 text-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <span>{company.email}</span>
            </a>
          </li>
          <li class="pt-2">
            <div class="text-white/60 text-xs space-y-1">
              <p>{company.hours.weekdays}</p>
              <p>{company.hours.saturday}</p>
              <p>{company.hours.sunday}</p>
            </div>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-white/5 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-white/40 text-sm">
          &copy; {new Date().getFullYear()} INNOVALUX SARL-s. Tous droits réservés.
        </p>
        <p class="text-white/40 text-sm">
          TVA: {company.vat}
        </p>
        <p class="text-white/40 text-sm">
          Site créé par <a href="https://slash.lu" target="_blank" rel="noopener noreferrer" class="text-gold hover:text-gold-light transition-colors">slash.lu</a>
        </p>
      </div>
    </div>
  </div>
</footer>
