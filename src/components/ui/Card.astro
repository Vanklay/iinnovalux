---
interface Props {
  hover?: boolean;
  class?: string;
}

const { hover = true, class: className = '' } = Astro.props;

const baseClasses = 'bg-dark-tertiary border border-white/5 rounded-2xl p-6 transition-all duration-300';
const hoverClasses = hover ? 'hover:border-gold/50 hover:-translate-y-1 hover:shadow-xl hover:shadow-gold/5' : '';
---

<div class:list={[baseClasses, hoverClasses, className]}>
  <slot />
</div>
