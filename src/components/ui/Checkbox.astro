---
interface Props {
  name: string;
  required?: boolean;
}

const { name, required = false } = Astro.props;
---

<div class="flex items-start gap-3">
  <div class="relative flex items-center">
    <input
      type="checkbox"
      id={name}
      name={name}
      required={required}
      class="peer w-5 h-5 bg-dark-tertiary border border-white/10 rounded cursor-pointer transition-all duration-300 checked:bg-gold checked:border-gold focus:ring-2 focus:ring-gold/50 focus:ring-offset-0 appearance-none"
    />
    <svg
      class="absolute w-3 h-3 left-1 top-1 text-dark-primary opacity-0 peer-checked:opacity-100 pointer-events-none transition-opacity"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="3"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
    </svg>
  </div>
  <label for={name} class="text-sm text-white/70 cursor-pointer select-none">
    <slot />
  </label>
</div>
