---
interface Props {
  label?: string;
  title: string;
  subtitle?: string;
  centered?: boolean;
}

const { label, title, subtitle, centered = true } = Astro.props;
---

<div class:list={['mb-12', centered && 'text-center']}>
  {label && (
    <span class="inline-block text-gold text-sm font-medium uppercase tracking-wider mb-4">
      {label}
    </span>
  )}
  <h2 class="font-display font-bold text-3xl md:text-4xl text-white mb-4">
    {title}
  </h2>
  {subtitle && (
    <p class:list={['text-gray-medium text-lg max-w-2xl', centered && 'mx-auto']}>
      {subtitle}
    </p>
  )}
</div>
