---
interface Props {
  variant?: 'default' | 'gold';
  class?: string;
}

const { variant = 'default', class: className = '' } = Astro.props;

const variantClasses = {
  default: 'bg-gold/10 border-gold/30 text-gold',
  gold: 'bg-gold-gradient text-dark-primary border-transparent',
};
---

<span
  class:list={[
    'inline-flex items-center gap-2 px-4 py-1.5 rounded-full text-sm font-medium border transition-colors',
    variantClasses[variant],
    className,
  ]}
>
  <slot />
</span>
