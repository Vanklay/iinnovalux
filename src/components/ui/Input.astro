---
interface Props {
  type?: 'text' | 'email' | 'tel' | 'number';
  name: string;
  label: string;
  placeholder?: string;
  required?: boolean;
  autocomplete?: string;
}

const {
  type = 'text',
  name,
  label,
  placeholder,
  required = false,
  autocomplete,
} = Astro.props;
---

<div class="space-y-2">
  <label for={name} class="block text-sm font-medium text-white/80">
    {label}
    {required && <span class="text-gold">*</span>}
  </label>
  <input
    type={type}
    id={name}
    name={name}
    placeholder={placeholder}
    required={required}
    autocomplete={autocomplete}
    class="w-full px-4 py-3 bg-dark-tertiary border border-white/10 rounded-xl text-white placeholder-white/40 transition-all duration-300 focus:border-gold focus:ring-1 focus:ring-gold focus:outline-none"
  />
</div>
