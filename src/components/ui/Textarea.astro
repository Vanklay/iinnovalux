---
interface Props {
  name: string;
  label: string;
  placeholder?: string;
  required?: boolean;
  rows?: number;
}

const {
  name,
  label,
  placeholder,
  required = false,
  rows = 5,
} = Astro.props;
---

<div class="space-y-2">
  <label for={name} class="block text-sm font-medium text-white/80">
    {label}
    {required && <span class="text-gold">*</span>}
  </label>
  <textarea
    id={name}
    name={name}
    placeholder={placeholder}
    required={required}
    rows={rows}
    class="w-full px-4 py-3 bg-dark-tertiary border border-white/10 rounded-xl text-white placeholder-white/40 transition-all duration-300 focus:border-gold focus:ring-1 focus:ring-gold focus:outline-none resize-y min-h-[120px]"
  ></textarea>
</div>
